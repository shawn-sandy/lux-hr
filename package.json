{
  "name": "@shawnsandy/astro-kit",
  "type": "module",
  "version": "0.1.0",
  "private": false,
  "description": "A collection of Astro components and utilities",
  "author": "Shawn Sandy",
  "license": "MIT",
  "keywords": [
    "astro-component",
    "withastro",
    "astro",
    "components",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shawn-sandy/astro-kit"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./src/components/index.ts",
    "./astro": "./src/components/astro"
  },
  "files": [
    "src/components/index.ts",
    "src/components/astro/*.astro"
  ],
  "scripts": {
    "dev": "astro dev --open",
    "start": "run-p dev sass",
    "build": "astro build",
    "preview": "astro preview",
    "sass": "sass --watch src/styles/index.scss:src/styles/index.css --style=compressed",
    "astro": "astro",
    "test": "vitest",
    "lint": "eslint . --fix",
    "npm-update": "npx npm-check-updates -u",
    "npm-update-i": "npx npm-check-updates -i"
  },
  "imports": {
    "#*": "./src/*"
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "^0.5.6",
    "@astrojs/mdx": "^4.3.0",
    "@astrojs/netlify": "^6.3.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.4.0",
    "@fpkit/acss": "^0.5.9",
    "@fpkit/react": "^0.4.3",
    "@sentry/astro": "^7.108.0",
    "@spotlightjs/astro": "^2.2.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/react": "^18.2.69",
    "@types/react-dom": "^18.2.22",
    "astro": "^5.8.0",
    "astro-embed": "^0.9.0",
    "astro-imagetools": "^0.9.0",
    "astro-lighthouse": "^0.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-accessible-emojis": "^0.3.2",
    "remark-toc": "^9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/node": "^22.15.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.87.0",
    "vitest": "^1.4.0"
  }
}